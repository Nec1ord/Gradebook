<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/dialog_delete_student_info_title"
            android:textColor="#FFFF"
            style="@style/AppTheme.Title"
            />

        <TextView
            android:id="@+id/message"
            tools:text="sampleText"
            android:paddingLeft="10sp"
            android:textSize="@dimen/dialog_text_size"
            android:layout_marginTop="@dimen/dialog_margin_top"
            android:layout_marginBottom="@dimen/dialog_margin_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            />

        <ImageButton
            android:id="@+id/no"
            android:layout_width="@dimen/dialog_buttons_width"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@android:drawable/btn_star_big_off"
            android:contentDescription="@string/delete_btn_no"
            android:layout_below="@+id/message"
            android:layout_toLeftOf="@+id/ok"
            android:layout_toStartOf="@+id/ok"
            />

        <ImageButton
            android:id="@+id/ok"
            android:layout_width="@dimen/dialog_buttons_width"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@android:drawable/btn_star_big_on"
            android:contentDescription="@string/delete_btn_ok"
            android:layout_below="@+id/message"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

</ScrollView>