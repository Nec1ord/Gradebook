<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Title">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/purple</item>
        <item name="android:textSize">@dimen/text_input_layout_textSize</item>
    </style>
    <style name="AppTheme.EditText">
        <item name="android:textSize">@dimen/dialog_text_size</item>
        <item name="android:textColorHint">@color/purple</item>
        <item name="colorControlNormal">@color/purple_light</item>
        <item name="colorControlActivated">@color/purple</item>
        <item name="colorControlHighlight">@color/purple</item>
    </style>
    <style name="CollapsingToolbarLayoutCollapsedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

</resources>
